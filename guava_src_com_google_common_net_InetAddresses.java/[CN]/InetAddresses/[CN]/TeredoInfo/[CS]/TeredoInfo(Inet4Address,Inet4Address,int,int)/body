{
  Preconditions.checkArgument((port >= 0) && (port <= 0xffff),"port '%d' is out of range (0 <= port <= 0xffff)",port);
  Preconditions.checkArgument((flags >= 0) && (flags <= 0xffff),"flags '%d' is out of range (0 <= flags <= 0xffff)",flags);
  if (server != null) {
    this.server=server;
  }
 else {
    this.server=ANY4;
  }
  if (client != null) {
    this.client=client;
  }
 else {
    this.client=ANY4;
  }
  this.port=port;
  this.flags=flags;
}
