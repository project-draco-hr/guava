{
  for (  final ListenerExecutorPair pair : listeners) {
    queuedListeners.add(new Runnable(){
      @Override public void run(){
        pair.execute(new Runnable(){
          @Override public void run(){
            pair.listener.failure(service);
          }
        }
);
      }
    }
);
  }
  serviceStopped(service);
}
