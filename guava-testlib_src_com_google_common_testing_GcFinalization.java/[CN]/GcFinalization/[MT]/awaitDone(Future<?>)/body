{
  if (future.isDone()) {
    return;
  }
  final long timeoutSeconds=timeoutSeconds();
  final long deadline=System.nanoTime() + SECONDS.toNanos(timeoutSeconds);
  do {
    System.runFinalization();
    if (future.isDone()) {
      return;
    }
    System.gc();
    try {
      future.get(1L,SECONDS);
      return;
    }
 catch (    CancellationException ok) {
      return;
    }
catch (    ExecutionException ok) {
      return;
    }
catch (    InterruptedException ie) {
      RuntimeException ae=new RuntimeException("Unexpected interrupt while waiting for future");
      ae.initCause(ie);
      throw ae;
    }
catch (    TimeoutException tryHarder) {
    }
  }
 while (System.nanoTime() - deadline < 0);
  throw new RuntimeException(String.format("Future not done within %d second timeout",timeoutSeconds));
}
