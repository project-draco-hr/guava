{
  checkNotNull(cause);
  lock.lock();
  try {
switch (state) {
case NEW:
case TERMINATED:
      throw new IllegalStateException("Failed while in state:" + state,cause);
case RUNNING:
case STARTING:
case STOPPING:
    State previous=state;
  failure=cause;
state=State.FAILED;
failed(previous,cause);
break;
case FAILED:
break;
default :
throw new AssertionError("Unexpected state: " + state);
}
}
  finally {
lock.unlock();
executeListeners();
}
}
