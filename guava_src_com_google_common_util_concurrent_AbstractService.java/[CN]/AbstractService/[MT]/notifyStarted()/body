{
  lock.lock();
  try {
    if (snapshot.state != State.STARTING) {
      IllegalStateException failure=new IllegalStateException("Cannot notifyStarted() when the service is " + snapshot.state);
      notifyFailed(failure);
      throw failure;
    }
    if (snapshot.shutdownWhenStartupFinishes) {
      snapshot=new StateSnapshot(State.STOPPING);
      doStop();
    }
 else {
      snapshot=new StateSnapshot(State.RUNNING);
      running();
    }
  }
  finally {
    lock.unlock();
    executeListeners();
  }
}
