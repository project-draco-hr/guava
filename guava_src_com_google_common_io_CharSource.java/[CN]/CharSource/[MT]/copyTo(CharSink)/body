{
  checkNotNull(sink);
  Closer closer=Closer.create();
  try {
    Reader reader=closer.add(openStream());
    Writer writer=closer.add(sink.openStream());
    return CharStreams.copy(reader,writer);
  }
 catch (  Throwable e) {
    throw closer.rethrow(e,IOException.class);
  }
 finally {
    closer.close();
  }
}
