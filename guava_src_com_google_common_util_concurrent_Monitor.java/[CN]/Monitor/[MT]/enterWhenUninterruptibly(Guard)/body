{
  if (guard.monitor != this) {
    throw new IllegalMonitorStateException();
  }
  final ReentrantLock lock=this.lock;
  boolean reentrant=lock.isHeldByCurrentThread();
  boolean success=false;
  lock.lock();
  try {
    waitUninterruptibly(guard,reentrant);
    success=true;
  }
  finally {
    if (!success) {
      lock.unlock();
    }
  }
}
