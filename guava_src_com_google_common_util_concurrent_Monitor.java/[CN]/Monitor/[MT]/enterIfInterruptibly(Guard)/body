{
  if (guard.monitor != this) {
    throw new IllegalMonitorStateException();
  }
  final ReentrantLock lock=this.lock;
  lock.lockInterruptibly();
  boolean satisfied=false;
  try {
    satisfied=guard.isSatisfied();
  }
  finally {
    if (!satisfied) {
      lock.unlock();
    }
  }
  return satisfied;
}
