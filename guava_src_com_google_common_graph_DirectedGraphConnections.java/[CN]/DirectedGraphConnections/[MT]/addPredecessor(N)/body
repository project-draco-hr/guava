{
  checkNotNull(node,"node");
  Adjacency adjacency=adjacentNodes.get(node);
  if (adjacency == null) {
    adjacentNodes.put(node,Adjacency.PRED);
    predecessorCount++;
  }
 else   if (adjacency == Adjacency.SUCC) {
    adjacentNodes.put(node,Adjacency.BOTH);
    predecessorCount++;
  }
  checkState(predecessorCount >= 1);
}
