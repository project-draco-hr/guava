{
  try {
    Ascii.truncate("foobar",2);
    fail();
  }
 catch (  IllegalArgumentException expected) {
  }
  try {
    Ascii.truncate("foobar",8,"1234567890");
    fail();
  }
 catch (  IllegalArgumentException expected) {
  }
  try {
    Ascii.truncate("foobar",-1);
    fail();
  }
 catch (  IllegalArgumentException expected) {
  }
  try {
    Ascii.truncate("foobar",-1,"");
    fail();
  }
 catch (  IllegalArgumentException expected) {
  }
}
