{
  ExecutorService e=new DirectExecutorService();
  List<Callable<Integer>> l=new ArrayList<Callable<Integer>>();
  l.add(new Callable<Integer>(){
    public Integer call(){
      throw new ArithmeticException("/ by zero");
    }
  }
);
  l.add(null);
  try {
    e.invokeAny(l);
    shouldThrow();
  }
 catch (  NullPointerException success) {
  }
 finally {
    joinPool(e);
  }
}
