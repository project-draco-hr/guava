{
  checkNotNull(iterator);
  checkArgument(limitSize >= 0,"limit is negative");
  return new Iterator<T>(){
    private int count;
    public boolean hasNext(){
      return count < limitSize && iterator.hasNext();
    }
    public T next(){
      if (!hasNext()) {
        throw new NoSuchElementException();
      }
      count++;
      return iterator.next();
    }
    public void remove(){
      iterator.remove();
    }
  }
;
}
